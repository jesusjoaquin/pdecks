{
  "name": "pdecks",
  "productName": "pdecks",
  "version": "1.0.0",
  "description": "Beautiful application to enhance the workflow experience.",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jesusjoaquin/pdecks.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jesusjoaquin/pdecks/issues"
  },
  "homepage": "https://github.com/jesusjoaquin/pdecks#readme",
  "build": {
    "appId": "pdecks",
    "category": "productivity",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel"
    }
  },
  "devDependencies": {
    "electron": "1.8.4",
    "electron-builder": "^20.10.0",
    "electron-packager": "^12.0.1"
  },
  "dependencies": {
    "electron-context-menu": "^0.9.1",
    "pg": "^7.4.1"
  }
}
